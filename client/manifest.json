{
    "manifest_version": 2,
    "name": "Passive scrape",
    "version": "1.0",

    "description": "Passively scrapes webpages.",

    "permissions":
    [
        "webNavigation",
        "menus",
        "activeTab",
        "tabs",
        "<all_urls>"
    ],

    "background": {
        "scripts": ["index.js"],
        "persistent": true
    },

    "browser_action": {
        "default_title": "Passive scrape",
        "default_popup": "popup.html"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "@passiveScrape",
            "strict_min_version": "42.0"
        }
    }

}
