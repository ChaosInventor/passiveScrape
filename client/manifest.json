{
    "manifest_version": 2,
    "name": "Passive scrape",
    "version": "1.0",

    "description": "Passively scrapes webpages.",

    "permissions": ["webNavigation", "menus", "activeTab"],

    "background": {
        "page": "index.html",
        "persistent": true
    },

    "browser_action": {
        "default_title": "Passive scrape"
    }

}
